{
  "root": true,
  "env": {
    "node": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "extends": "airbnb/base",
  "rules": {
    "import/no-extraneous-dependencies": [2, { "devDependencies": true }],
    "no-plusplus": 0,
    "comma-dangle": [2, "never"],
    "curly": [2, "all"]
  }
}
