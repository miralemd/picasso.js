{
  "env": {
    "node": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "extends": "airbnb/base",
  "rules": {
	// Temporary rules
    "guard-for-in": 0,
    "import/first": 0,
    "import/no-extraneous-dependencies": 0,
    "import/no-named-default": 0,
    "import/prefer-default-export": 0,
    "max-len": 0,
    "no-bitwise": 0,
    "no-continue": 0,
    "no-confusing-arrow": 0,
    "no-else-return": 0,
    "no-throw-literal": 0,
    "no-restricted-properties": 0,
    "no-restricted-syntax": 0,
    "no-param-reassign": 0,
    "no-underscore-dangle": 0,
    "no-useless-escape": 0,
    "object-property-newline": 0,
    "one-var": 0,
    "prefer-const": 0,
    "radix": 0,
	// Overrides
    "no-plusplus": 0,
    "comma-dangle": [2, "never"]
  }
}
