{
  "name": "@qlik/picasso",
  "version": "0.1.0",
  "description": "A charting library streamlined for building visualizations for the Qlik Sense Analytics platform.",
  "license": "ISC",
  "private": true,
  "publishConfig": {
    "registry": "https://qliktech.artifactoryonline.com/qliktech/api/npm/npm-local/"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:qlik-trial/picasso.js.git"
  },
  "scripts": {
    "build": "webpack -p --output-filename [name].min.js",
    "build:debug": "webpack -d",
    "build:watch": "webpack -d --watch",
    "docs": "rimraf ./docs/api && jsdoc -r ./src -d ./docs/api",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "aw-test-runner ./src/**/*.spec.js",
    "test:watch": "aw-test-runner ./src/**/*.spec.js -w",
    "test:coverage": "aw-test-coverage ./src/**/*.spec.js",
    "test:component:local": "node node_modules/@qlik/after-work/node_modules/protractor/bin/webdriver-manager update --standalone false && aw-webdriver-test-runner ./test/config/aw-config.js --specs ./src/**/*.comp.js",
    "test:component:remote": "aw-webdriver-test-runner ./test/config/aw-config-remote.js --specs src/**/*.comp.js"
  },
  "files": [
    "/dist"
  ],
  "devDependencies": {
    "@qlik/after-work": "^0.12.3",
    "babel-core": "^6.14.0",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.14.0",
    "eslint": "^2.0.0",
    "eslint-plugin-mocha": "^3.0.0",
    "extend": "^3.0.0",
    "jsdoc": "^3.4.0",
    "rimraf": "^2.5.2",
    "webpack": "^1.13.2"
  },
  "dependencies": {
    "d3-scale": "^1.0.0",
    "node-event-emitter": "0.0.1"
  }
}
